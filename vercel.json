{
  "version": 2,
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/static/(.*)",
      "dest": "/static/$1"
    },
    {
      "src": "/uploads/(.*)",
      "dest": "/uploads/$1"
    },
    {
      "src": "/(.*)",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "MONGODB_URI": "@mongodb_uri",
    "FLASK_SECRET_KEY": "@flask_secret_key",
    "DATABASE_NAME": "@database_name",
    "GEMINI_API_KEY": "@gemini_api_key",
    "UPLOAD_FOLDER": "uploads"
  },
  "regions": ["sin1"]
}
